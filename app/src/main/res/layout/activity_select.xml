<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectact_select_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/student_selector_text"
            android:textSize="22dp">

        </TextView>
        <Spinner
            android:id="@+id/selectact_select_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>



    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/selectact_listview"
        android:layout_weight="1">
    </ListView>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/selectact_search_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student_search_text"
            android:textSize="22dp">
        </TextView>

        <EditText
            android:id="@+id/selectact_searchinput"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </EditText>

    </LinearLayout>

</LinearLayout>


